{
  "name": "Capture Extension",
  "version": "1.0",
  "description": "Google Chromeでキャプチャを撮って画像をダウンロードするツール",
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons8-camera-16.png",
      "32": "images/icons8-camera-32.png",
      "48": "images/icons8-camera-48.png",
      "128": "images/icons8-camera-128.png"
    }
  },
  "manifest_version": 2
}
